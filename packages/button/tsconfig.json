{
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "outDir": "./dist"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".eslintrc.js"
  ],
  "exclude": ["dist", "node_modules", "**/*.spec.ts"]
}
